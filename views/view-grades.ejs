<%- include('./layouts/header') %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Grades</title>
</head>
<body>

  <h1>Your Grades</h1>

  <% if (studentRecord && studentRecord.grades) { %>
    <table>
      <thead>
        <tr>
          <th>Subject</th>
          <th>Grade</th>
        </tr>
      </thead>
      <tbody>
        <% Array.from(studentRecord.grades).forEach(([subject, grade]) => { %>
          <tr>
            <td><%= subject %></td>
            <td><%= grade %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <p>No grades available.</p>
  <% } %>
  

</body>
</html>


<%- include('./layouts/footer') %>

